<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Boolean</th>
      <th>Primary phone number</th>
      <th>Secondary phone number</th>
      <th>Mobile phone</th>
      <th>Fax</th>
      <th>Boolean</th>
      <th>Referral source</th>
      <th>Company name</th>
      <th>Account ref number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.first_name %></td>
        <td><%= account.last_name %></td>
        <td><%= account.email %></td>
        <td><%= account.boolean %></td>
        <td><%= account.primary_phone_number %></td>
        <td><%= account.secondary_phone_number %></td>
        <td><%= account.mobile_phone %></td>
        <td><%= account.fax %></td>
        <td><%= account.boolean %></td>
        <td><%= account.referral_source %></td>
        <td><%= account.company_name %></td>
        <td><%= account.account_ref_number %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

