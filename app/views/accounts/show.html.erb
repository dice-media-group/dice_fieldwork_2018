                        <td style="padding:0 15px 0 15px;">
                          <!-- Finished -->
                        </td>
                        <td class="record_actions">
                        </td>
                      </tr>
                    <% end %>
                  </tbody></table>
              </fieldset>
        </div>
    </div>
