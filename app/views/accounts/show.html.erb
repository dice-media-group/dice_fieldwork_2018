<div class="row">
    <div class="col-md-4">
        <div class="row">
            <h1 id="full_name"><%= @account.name.to_s %></h1>
        </div>
        <div class="row">
            <div class="col-md-4">
                <p>
                  <b>Email:</b>
                  <%= @account.email %>
                </p>
    
                <p>
                  <b>Phone number:</b>
                  <%= @account.primary_phone_number %>
                </p>
    
                  <p>
                    <b>Alternate phone number:</b>
                  <%= @account.secondary_phone_number %>
                  </p>
    
                <p>
                  <b>Service address:</b>
                  <%= @account.return_service_location(@account.id).return_postal_format %>
                </p>
    
                <p>
                  <b>Billing address:</b>
                  <%= @account.return_billing_location(@account.id).return_postal_format %>
                </p>
    
