              </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="row">
            <%= link_to "Edit account", edit_account_path(@account) %> | 
            <% if @agreement %>
                <%= link_to "View service agreement", service_agreement_path(@agreement) %> 
            <% else %>
                <%= link_to "Create service agreement", new_account_service_agreement_path(@account) %>
            <% end %>
            | <%= link_to "Back to accounts", accounts_path %>
        </div>
        <div class="row">
            <fieldset>
                <legend>Service Consultations</legend>
                  <table class="index_list">
                    <tbody><tr>
                      <th>When</th>
                      <th>Service Route</th>
                      <th>Status</th>
                      <th></th>
                    </tr>
                    <% @account.consultations.each do |consult| %>
                      <tr class="g">
                        <td style="padding:0 15px 0 15px;">
                            <!-- <a href="/appointments?date=2015-08-05&amp;service_route=79"><%= consult.get_start %></a> -->
                            <%= link_to consult.get_start, consultation_path(consult) %>
                        </td>
                        <td style="padding:0 15px 0 15px;">
                            <%= link_to "Serviced by #{consult.user.email}", consultation_path(consult) %>
